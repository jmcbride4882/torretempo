# Torre Tempo - Production Environment Variables
# ⚠️ CRITICAL: Generate unique secrets before deploying!

# Node environment
NODE_ENV=production

# Database (PostgreSQL)
POSTGRES_USER=torretempo
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=torre_tempo_prod
DATABASE_URL=postgresql://torretempo:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/torre_tempo_prod

# Redis
REDIS_URL=redis://redis:6379

# JWT Secrets (MUST CHANGE - Generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHAR_STRING
REFRESH_TOKEN_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHAR_STRING

# Token expiration
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://time.lsltgroup.es

# API
PORT=3000
API_BASE_PATH=/api/v1

# Frontend (for Vite build)
VITE_API_URL=https://time.lsltgroup.es/api/v1

# Geolocation (event-only, privacy-compliant)
GEOLOCATION_ENABLED=true
GEOLOCATION_MAX_ACCURACY=100

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Session
SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHAR_STRING

# Email (for notifications - optional, configure later)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@torretempo.com
# SMTP_PASSWORD=
# SMTP_FROM=Torre Tempo <noreply@torretempo.com>

# File uploads (future feature)
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=/opt/torre-tempo/uploads

# Domain
DOMAIN=time.lsltgroup.es
